{
  "$schema": "https://opencode.ai/config.json",
  "autoupdate": true,
  "theme": "system",
  "tui": {
    "scroll_acceleration": {
      "enabled": true
    }
  },
  "permission": {
    "bash": {
      "*": "ask",
      "node *": "allow",
      "python *": "allow",
      "python3 *": "allow",
      "go *": "allow",
      "git *": "allow",
      "git push *": "deny",
      "npx *": "allow",
      "npm *": "allow",
      "npm publish *": "deny",
      "npm run build *": "deny",
      "bun *": "allow",
      "bun run build *": "deny",
      "bun publish *": "deny",
      "gh *": "allow",
      "jq *": "allow",
      "head *": "allow",
      "tail *": "allow",
      "grep *": "allow",
      "cat *": "allow",
      "sed *": "allow",
      "rg *": "allow",
      "awk *": "allow",
      "find *": "allow",
      "mkdir *": "allow",
      "touch *": "allow",
      "cp *": "allow",
      "ls *": "allow",
      "rm *": "allow",
      "rm -rf ~/": "deny",
      "mv *": "allow",
      "ln *": "allow",
      "echo *": "allow",
      "curl *": "allow",
      "wget *": "allow"
    }
  },
  "mcp": {
    "notion": {
      "type": "remote",
      "url": "https://mcp.notion.com/mcp",
      "oauth": {}
    }
  }
}
